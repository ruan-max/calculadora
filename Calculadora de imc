CALCULADORA DR IMC(INDICE DE MASSA CORPORAL)
Linguagem C



#include<stdio.h>

int main()
{
    float peso, altura, imc;
    
    printf("Digite seu peso em Kg:\n");
    scanf("%f",&peso);
    
    printf ("Digite sua altura em m:\n");
    scanf("%f", &altura);
    
    imc= peso*altura*altura;
    
    if (imc <21){ printf(" desnutrido\n");
    }
    else{ printf(" peso ideal\n");
    } if (imc>26){ printf ("acima do peso\n");
    }
    
    
    
    
    
    return 0;
}
